<h2>New Topic</h2>

<div class="row">
  <div class="col-md-4">
    <%= form_for ([@group, @meeting, @question]) do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', placeholder: "Enter your suggested topic" %>
      </div>
      
      <%= f.submit "Suggest Topic", class: 'btn btn-success' %>

    <% end %>
  </div>
</div>