<h2>New Group</h2>

<div class="row">
  <div class="col-md-4">
    <%= form_for @group do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', placeholder: "Enter the group name" %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control', placeholder: "Enter a short description of what the group is all about" %>
      </div>
      
      <%= f.submit "Create Group", class: 'btn btn-success' %>

    <% end %>
  </div>
</div>
